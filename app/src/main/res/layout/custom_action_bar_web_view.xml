<?xml version = "1.0" encoding = "utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="56dp"
    xmlns:cardview="http://schemas.android.com/tools"
    android:background="@drawable/custom_bottom_line_action_bar">

            <ImageView
                android:id="@+id/img_back_web_view"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/margin_material_16dp"
                android:src="@drawable/ic_arrow_back_black_24dp"
                android:contentDescription="@string/image" />

            <TextView
                android:id="@+id/txt_title_web_view"
                style="@style/TextAppearance.AppCompat.Widget.ActionBar.Menu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="64dp"
                android:paddingEnd="56dp"
                android:layout_centerVertical="true"
                android:text="@string/title"
                android:ellipsize="end"
                android:singleLine="true"
                android:textAllCaps="false"
                cardview:ignore="RelativeOverlap" />

            <ImageView
                android:id="@+id/img_launch_web_view"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="@dimen/margin_material_16dp"
                android:src="@drawable/ic_launch_black_24dp"
                android:contentDescription="@string/image" />

        </RelativeLayout>
