<?xml version = "1.0" encoding = "utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:cardview="http://schemas.android.com/tools"
    android:background="@android:color/white">

    <androidx.cardview.widget.CardView
        cardview:cardCornerRadius="5dp"
        cardview:cardElevation="2dp"
        android:layout_width="match_parent"
        android:layout_height="56dp">

        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/img_back_web_view"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="16dp"
                android:src="@drawable/ic_arrow_back_black_24dp" />

            <TextView
                android:id="@+id/txt_title_web_view"
                style="@style/TextAppearance.AppCompat.Widget.ActionBar.Menu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="64dp"
                android:paddingRight="56dp"
                android:layout_centerVertical="true"
                android:text="Tiêu Đề Trang Web"
                android:ellipsize="end"
                android:singleLine="true"
                android:textAllCaps="false" />

            <ImageView
                android:id="@+id/img_launch_web_view"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="16dp"
                android:src="@drawable/ic_launch_black_24dp" />

        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</RelativeLayout>