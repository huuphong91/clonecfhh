<?xml version = "1.0" encoding = "utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="56dp"
    xmlns:cardview="http://schemas.android.com/tools"
    android:background="@drawable/custom_bottom_line_action_bar">

            <ImageView
                android:id="@+id/img_close_notificaton"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/margin_material_16dp"
                android:src="@drawable/ic_close_grey_800_24dp"
                android:contentDescription="@string/image" />

            <TextView
                android:id="@+id/txt_title_notificaton"
                style="@style/TextAppearance.AppCompat.Widget.ActionBar.Menu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:text="@string/title_action_bar_notifications"
                android:textAllCaps="false"
                cardview:ignore="RelativeOverlap" />

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="@dimen/margin_material_16dp"
                android:src="@drawable/ic_playlist_add_check_black_24dp"
                android:contentDescription="@string/image" />

        </RelativeLayout>

