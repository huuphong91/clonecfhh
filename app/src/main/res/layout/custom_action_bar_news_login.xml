<?xml version = "1.0" encoding = "utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="56dp"
    android:background="@drawable/custom_bottom_line_action_bar">

    <ImageView
        android:id="@+id/img_news_person"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="16dp"
        android:src="@drawable/ic_person_grey_700_24dp" />
    <TextView
        android:id="@+id/txt_name_news_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/img_news_person"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="4dp"
        android:text="Cao Trinh"/>

    <TextView
        android:id="@+id/txt_score_news_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt_name_news_login"
        android:layout_toRightOf="@id/img_news_person"
        android:layout_marginLeft="16dp"
        android:drawableRight="@drawable/resources_images_icons_ic_stars_yellow_resize"
        android:layout_marginTop="4dp"
        android:text="â€¢ 0 "/>

    <ImageView
        android:id="@+id/img_news_notification_sign_in"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="16dp"
        android:src="@drawable/ic_notifications_grey_800_24dp" />
</RelativeLayout>
