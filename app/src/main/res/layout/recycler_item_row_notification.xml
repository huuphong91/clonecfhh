<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:cardview="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/margin_material_16dp"
    android:gravity="center_horizontal">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/img_news_item_ring_notification"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginRight="6dp"
                android:layout_marginLeft="4dp"
                android:scaleType="centerCrop"
                android:src="@drawable/resources_images_icons_gift"/>
            <TextView
                android:id="@+id/txt_news_item_tilte_notification"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_toRightOf="@+id/img_news_item_ring_notification"
                android:text="Title"
                android:textSize="14dp"
                android:textStyle="bold"
                android:textColor="#333333"/>
            <TextView
                android:id="@+id/txt_news_item_content_notification"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/txt_news_item_tilte_notification"
                android:layout_marginLeft="8dp"
                android:paddingRight="@dimen/margin_material_16dp"
                android:layout_toRightOf="@+id/img_news_item_ring_notification"
                android:text="Content"
                android:lineSpacingExtra="6dp"
                android:textSize="12sp"
                android:textColor="#333333" />

            <TextView
                android:id="@+id/txt_news_item_date_notification"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/txt_news_item_content_notification"
                android:layout_toRightOf="@+id/img_news_item_ring_notification"
                android:layout_marginTop="4dp"
                android:layout_marginLeft="8dp"
                android:layout_marginBottom="8dp"
                android:text="Date"
                android:textSize="12sp"
                android:textColor="#333333"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@id/txt_news_item_date_notification"
                android:background="@android:color/darker_gray">

            </View>

        </RelativeLayout>

</RelativeLayout>
