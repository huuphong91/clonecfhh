<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/tbrExitStroreDetail"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:navigationIcon="@drawable/icon_delete">

        <TextView
            android:id="@+id/txtNameStroreDetail"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center|left"
            android:text="111 Nguyen thach hoang luan"
            android:textColor="#000000"
            android:textSize="20sp"
            tools:layout_editor_absoluteX="72dp" />
    </androidx.appcompat.widget.Toolbar>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tbrExitStroreDetail">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/qqoc"
                android:layout_width="match_parent"
                android:layout_height="3dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">


            </androidx.appcompat.widget.Toolbar>

            <ImageView
                android:id="@+id/imgStroreDetail"
                android:layout_width="match_parent"
                android:layout_height="217dp"
                android:layout_marginTop="4dp"
                android:scaleType="fitXY"
                android:src="@mipmap/ic_launcher"
                app:layout_constraintBottom_toTopOf="@+id/mpvStroreDetail"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/qqoc"
                app:layout_constraintTop_toTopOf="parent" />

            <com.google.android.gms.maps.MapView xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:map="http://schemas.android.com/apk/res-auto"
                android:id="@+id/mpvStroreDetail"
                class="com.google.android.gms.maps.SupportMapFragment"
                android:layout_width="match_parent"
                android:layout_height="162dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="16dp"
                android:layout_marginRight="10dp"
                map:layout_constraintBottom_toTopOf="@+id/txtAddressStroreDetail"
                map:layout_constraintEnd_toEndOf="parent"
                map:layout_constraintHorizontal_bias="0.421"
                map:layout_constraintStart_toStartOf="parent"
                map:layout_constraintTop_toBottomOf="@+id/imgStroreDetail"
                map:uiZoomControls="true" />

            <TextView
                android:id="@+id/txtAddressStroreDetail"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_marginRight="10dp"
                android:gravity="center|left"
                android:text="P8, Tp HCM, 22/21 đường số 21, Phường 8, Gò Vấp, Hồ Chí Minh"
                android:textColor="#000000"
                android:textSize="17sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/imageView2"
                app:layout_constraintTop_toBottomOf="@+id/mpvStroreDetail" />

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="57dp"
                android:layout_height="60dp"
                android:layout_marginStart="32dp"
                app:layout_constraintBottom_toBottomOf="@+id/txtAddressStroreDetail"
                app:layout_constraintEnd_toStartOf="@+id/txtAddressStroreDetail"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/txtAddressStroreDetail"
                app:srcCompat="@drawable/icon_gps" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="#EEE8DD"
                android:paddingLeft="32dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:text="Chi Tiết"
                android:textColor="#000000"
                android:textSize="17sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txtAddressStroreDetail" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="0dp"
                android:layout_height="86dp"
                android:background="#EEE8DD"
                android:paddingLeft="10dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:textColor="#000000"
                android:textSize="17sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txtNumberPhoneStroreDetail" />

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="57dp"
                android:layout_height="60dp"
                android:layout_marginStart="32dp"
                android:padding="10dp"
                app:layout_constraintBottom_toBottomOf="@+id/txtOpeningClosingTimeStroreDetail"
                app:layout_constraintEnd_toStartOf="@+id/textView5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/textView5"
                app:srcCompat="@android:drawable/ic_lock_idle_alarm" />

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="57dp"
                android:layout_height="60dp"
                android:layout_marginStart="32dp"
                android:padding="10dp"
                app:layout_constraintBottom_toBottomOf="@+id/txtNumberPhoneStroreDetail"
                app:layout_constraintEnd_toStartOf="@+id/textView3"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/textView3"
                app:srcCompat="@drawable/icon_phone" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_marginEnd="32dp"
                android:gravity="center|left"
                android:text="Giờ mở cửa"
                android:textColor="#000000"
                android:textSize="17sp"
                app:layout_constraintBottom_toTopOf="@+id/txtOpeningClosingTimeStroreDetail"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/imageView3"
                app:layout_constraintTop_toBottomOf="@+id/textView2" />

            <TextView
                android:id="@+id/txtOpeningClosingTimeStroreDetail"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_marginEnd="32dp"
                android:gravity="center|left"
                android:text="07:00 - 22:00"
                android:textColor="#000000"
                android:textSize="17sp"
                app:layout_constraintBottom_toTopOf="@+id/textView3"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/imageView3"
                app:layout_constraintTop_toBottomOf="@+id/textView5" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="0dp"
                android:layout_height="35dp"
                android:layout_marginEnd="32dp"
                android:gravity="center|left"
                android:text="Liên hệ"
                android:textColor="#000000"
                android:textSize="17sp"
                app:layout_constraintBottom_toTopOf="@+id/txtNumberPhoneStroreDetail"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/imageView4"
                app:layout_constraintTop_toBottomOf="@+id/imageView3" />

            <TextView
                android:id="@+id/txtNumberPhoneStroreDetail"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_marginEnd="32dp"
                android:gravity="center|left"
                android:text="0358426655"
                android:textColor="#000000"
                android:textSize="17sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/imageView4"
                app:layout_constraintTop_toBottomOf="@+id/textView3" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:background="#533434"
                app:layout_constraintBottom_toTopOf="@+id/imageView4"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/imageView3" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>



</androidx.constraintlayout.widget.ConstraintLayout>